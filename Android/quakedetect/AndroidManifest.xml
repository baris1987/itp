<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.th.nuernberg.quakedetec"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />
 	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
	<uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES"/>
	<!-- The following two permissions are not required to usec
     Google Maps Android API v2, but are recommended. -->
	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
		
	<uses-feature
        android:glEsVersion="0x00020000"
        android:required="true"/>
	
    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.th.nuernberg.quakedetec.screens.Main"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".screens.Settings"></activity>
        
        <meta-data
    		android:name="com.google.android.maps.v2.API_KEY"
   			android:value="AIzaSyA85JbEiHbAm_MVmaVo5MTLZxOXL0cPhCE"/>  <!-- Hier muss euer Key fÃ¼r euren jeweiligen debug.keystore rein -->
        <service android:name=".acceleration.Accelerometer">
        </service>
        <service android:name="com.th.nuernberg.quakedetec.service.BackgroundService"></service>
        <receiver android:name="com.th.nuernberg.quakedetec.receiver.BootCompletedReceiver">
            <intent-filter>
                	<action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
   			
    </application>

</manifest>
